<Application x:Class="Crosshair_MY.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ShutdownMode="OnMainWindowClose">

    <Application.Resources>

        <!-- ================= GLOBAL COLORS ================= -->
        <Color x:Key="BgMainColor">#121212</Color>
        <Color x:Key="BgPanelColor">#1A1A1A</Color>
        <Color x:Key="BgTitleColor">#1F1F1F</Color>
        <Color x:Key="BorderColor">#2A2A2A</Color>
        <Color x:Key="AccentColor">#3B82F6</Color>

        <Color x:Key="TextPrimary">#FFFFFF</Color>
        <Color x:Key="TextSecondary">#8B8B8B</Color>

        <!-- ================= BRUSHES ================= -->
        <SolidColorBrush x:Key="BgMainBrush" Color="{StaticResource BgMainColor}"/>
        <SolidColorBrush x:Key="BgPanelBrush" Color="{StaticResource BgPanelColor}"/>
        <SolidColorBrush x:Key="BgTitleBrush" Color="{StaticResource BgTitleColor}"/>
        <SolidColorBrush x:Key="BorderBrushMain" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>

        <!-- ================= WINDOW DEFAULT ================= -->
        <Style TargetType="Window">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Background" Value="{StaticResource BgMainBrush}"/>
        </Style>

        <!-- ================= TEXTBLOCK DEFAULT ================= -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <!-- ================= BUTTON STYLE ================= -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd"
                                        Property="Background"
                                        Value="#2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd"
                                        Property="Background"
                                        Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ================= COMBOBOX STYLE ================= -->
        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushMain}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,4"/>
        </Style>

        <!-- ================= SLIDER STYLE ================= -->
        <Style TargetType="Slider">
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Height" Value="22"/>
        </Style>

    </Application.Resources>
</Application>
