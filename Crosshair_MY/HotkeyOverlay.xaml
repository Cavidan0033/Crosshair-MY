<Window x:Class="Crosshair_MY.HotkeyOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="260"
        Height="320"
        Topmost="True"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False">

    <Border Background="#CC111111"
            CornerRadius="12"
            Padding="14">

        <StackPanel>

            <!-- BAŞLIQ -->
            <TextBlock Text="CROSSHAIR MY"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,12"
                       HorizontalAlignment="Center"/>

            <Separator Background="#333" Margin="0,0,0,10"/>

            <!-- HOTKEY TEXTLƏR -->
            <TextBlock Text="F2   Menünü Gizlət / Göstər"
                       Foreground="White"
                       FontSize="14"
                       Margin="4"/>

            <TextBlock Text="F3   Proqramdan Çıx"
                       Foreground="White"
                       FontSize="14"
                       Margin="4"/>

            <TextBlock x:Name="F4Text"
                       Text="F4   Shape: Classic +"
                       Foreground="White"
                       FontSize="14"
                       Margin="4"/>

            <TextBlock x:Name="F5Text"
                       Text="F5   Size: 40"
                       Foreground="White"
                       FontSize="14"
                       Margin="4"/>

            <TextBlock x:Name="F6Text"
                       Text="F6   Color: Red"
                       Foreground="White"
                       FontSize="14"
                       Margin="4"/>

            <Separator Background="#333" Margin="10"/>

            <TextBlock Text="Version 1.1"
                       Foreground="#888"
                       FontSize="11"
                       HorizontalAlignment="Center"/>

        </StackPanel>
    </Border>
</Window>
