<Window x:Class="Crosshair_MY.HotkeyOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quick Guide" Height="280" Width="200"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" IsHitTestVisible="False">

    <Border Background="#CC0A0A0A" CornerRadius="12" Padding="15" BorderBrush="#252525" BorderThickness="1" Margin="5">
        <StackPanel>
            <TextBlock Text="QUICK GUIDE" Foreground="#FF4500" FontWeight="Bold" FontSize="11" Margin="0,0,0,12" Opacity="0.8" HorizontalAlignment="Center"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="35"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="F2" Foreground="#888" Grid.Row="0"/>
                <TextBlock Text="Toggle Menu" Foreground="White" Grid.Row="0" Grid.Column="1" Margin="5,0,0,6" FontSize="11"/>
                <TextBlock Text="F3" Foreground="#888" Grid.Row="1"/>
                <TextBlock Text="Exit App" Foreground="White" Grid.Row="1" Grid.Column="1" Margin="5,0,0,6" FontSize="11"/>
                <TextBlock Text="F4" Foreground="#888" Grid.Row="2"/>
                <TextBlock Text="Reset Editor" Foreground="White" Grid.Row="2" Grid.Column="1" Margin="5,0,0,6" FontSize="11"/>
                <TextBlock Text="F5" Foreground="#888" Grid.Row="3"/>
                <TextBlock Text="Clean RAM" Foreground="White" Grid.Row="3" Grid.Column="1" Margin="5,0,0,6" FontSize="11"/>
                <TextBlock Text="F6" Foreground="#888" Grid.Row="4"/>
                <TextBlock Text="Open Editor" Foreground="White" Grid.Row="4" Grid.Column="1" Margin="5,0,0,12" FontSize="11"/>

                <TextBlock Text="Z" Foreground="#FF4500" FontWeight="Bold" Grid.Row="5"/>
                <TextBlock Text="Next Style" Foreground="White" Grid.Row="5" Grid.Column="1" Margin="5,0,0,6" FontSize="11"/>
                <TextBlock Text="X" Foreground="#FF4500" FontWeight="Bold" Grid.Row="6"/>
                <TextBlock Text="Next Color" Foreground="White" Grid.Row="6" Grid.Column="1" Margin="5,0,0,6" FontSize="11"/>
                <TextBlock Text="C" Foreground="#FF4500" FontWeight="Bold" Grid.Row="7"/>
                <TextBlock Text="Cycle Size" Foreground="White" Grid.Row="7" Grid.Column="1" Margin="5,0,0,0" FontSize="11"/>
            </Grid>
        </StackPanel>
    </Border>
</Window>