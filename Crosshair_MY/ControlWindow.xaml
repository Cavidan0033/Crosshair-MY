<Window x:Class="Crosshair_MY.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crosshair X - Designer" Height="650" Width="900"
        Background="Transparent" WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A1A1A"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WindowControlStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAA"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="btnBorder" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btnBorder" Property="Background" Value="#333"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowControlStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="btnBorder" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btnBorder" Property="Background" Value="#C42B1C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Slider">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" Background="#121212" BorderBrush="#252525" BorderThickness="2" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#0A0A0A" CornerRadius="20,0,0,20">
                <StackPanel Margin="0,30,0,0">
                    <TextBlock Text="CROSSHAIR MY" Foreground="#FF4500" FontSize="22" FontWeight="ExtraBold" HorizontalAlignment="Center" Margin="0,0,0,40">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#FF4500" BlurRadius="10" ShadowDepth="0"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <Button x:Name="BtnEssentials" Content="Essentials" Style="{StaticResource MenuButtonStyle}" Click="Nav_Click"/>
                    <Button x:Name="BtnEditor" Content="Editor" Style="{StaticResource MenuButtonStyle}" Click="Nav_Click"/>
                    <Button x:Name="BtnProfiles" Content="Profiles" Style="{StaticResource MenuButtonStyle}" Click="Nav_Click"/>
                    <Button x:Name="BtnSettings" Content="Settings" Style="{StaticResource MenuButtonStyle}" Click="Nav_Click"/>

                    <Separator Background="#1A1A1A" Margin="20,20"/>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1" Margin="35">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-20,-20,0">
                    <Button Content="—" Style="{StaticResource WindowControlStyle}" Click="Minimize_Click" ToolTip="Minimize"/>
                    <Button Content="☐" Style="{StaticResource WindowControlStyle}" Click="Maximize_Click" ToolTip="Maximize"/>
                    <Button Content="✕" Style="{StaticResource CloseButtonStyle}" Click="Close_Click" ToolTip="Close"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,10,0,0">
                    <TextBlock x:Name="TxtPageTitle" Text="EDITOR" Foreground="White" FontSize="32" FontWeight="Bold"/>
                    <TextBlock x:Name="TxtPageSubtitle" Text="STUDIO" Foreground="#FF4500" FontSize="12" FontWeight="Bold" Margin="10,0,0,15" VerticalAlignment="Center" Opacity="0.8"/>
                </StackPanel>

                <Grid x:Name="View_Essentials" Grid.Row="1" Visibility="Collapsed" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="QUICK ACTIONS" Foreground="#FF4500" FontSize="11" FontWeight="Bold" Margin="0,0,0,15" Opacity="0.7"/>
                        <Button Content="Toggle Crosshair (F2)" Height="50" Background="#1A1A1A" Foreground="White" BorderThickness="0" Margin="0,0,0,10" Click="Action_Toggle_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>

                <ScrollViewer x:Name="View_Editor" Grid.Row="1" VerticalScrollBarVisibility="Hidden" Margin="0,10,0,0" Visibility="Visible">
                    <StackPanel>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Color" Foreground="#666" Margin="0,0,0,5"/>
                                <ComboBox x:Name="ColorCombo" SelectionChanged="ColorCombo_SelectionChanged" Height="35" Background="#252525" Foreground="White" BorderBrush="#333" BorderThickness="1" Padding="10,8,0,0" FontSize="14" FontWeight="Bold">
                                    <ComboBox.Resources>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Background" Value="#252525"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </Style>
                                    </ComboBox.Resources>
                                    <ComboBoxItem Content="Red"/>
                                    <ComboBoxItem Content="Green"/>
                                    <ComboBoxItem Content="Cyan"/>
                                    <ComboBoxItem Content="Yellow"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Style" Foreground="#666" Margin="0,0,0,5"/>
                                <ComboBox x:Name="StyleCombo" SelectionChanged="StyleCombo_SelectionChanged" Height="35" Background="#252525" Foreground="White" BorderBrush="#333" BorderThickness="1" Padding="10,8,0,0" FontSize="14" FontWeight="SemiBold">
                                    <ComboBox.Resources>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Background" Value="#252525"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </Style>
                                    </ComboBox.Resources>
                                </ComboBox>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="DIMENSIONS" Foreground="#FF4500" FontSize="11" FontWeight="Bold" Margin="0,10,0,10" Opacity="0.7"/>
                        <TextBlock Text="Opacity" Foreground="#AAA"/>
                        <DockPanel>
                            <TextBlock Text="{Binding ElementName=OpacitySlider, Path=Value, StringFormat={}{0:0}%}" Foreground="#FF4500" Width="40" DockPanel.Dock="Right" TextAlignment="Right"/>
                            <Slider x:Name="OpacitySlider" Minimum="0" Maximum="100" Value="100" ValueChanged="Settings_Changed" IsSnapToTickEnabled="True"/>
                        </DockPanel>

                        <TextBlock Text="Length" Foreground="#AAA"/>
                        <DockPanel>
                            <TextBlock Text="{Binding ElementName=LengthSlider, Path=Value, StringFormat={}{0:0}}" Foreground="#FF4500" Width="40" DockPanel.Dock="Right" TextAlignment="Right"/>
                            <Slider x:Name="LengthSlider" Minimum="1" Maximum="100" ValueChanged="Settings_Changed" TickFrequency="1" IsSnapToTickEnabled="True"/>
                        </DockPanel>

                        <TextBlock Text="Thickness" Foreground="#AAA"/>
                        <DockPanel>
                            <TextBlock Text="{Binding ElementName=ThickSlider, Path=Value, StringFormat={}{0:0}}" Foreground="#FF4500" Width="40" DockPanel.Dock="Right" TextAlignment="Right"/>
                            <Slider x:Name="ThickSlider" Minimum="1" Maximum="20" ValueChanged="Settings_Changed" IsSnapToTickEnabled="True"/>
                        </DockPanel>

                        <TextBlock Text="Gap" Foreground="#AAA"/>
                        <DockPanel Margin="0,0,0,20">
                            <TextBlock Text="{Binding ElementName=GapSlider, Path=Value, StringFormat={}{0:0}}" Foreground="#FF4500" Width="40" DockPanel.Dock="Right" TextAlignment="Right"/>
                            <Slider x:Name="GapSlider" Minimum="0" Maximum="50" ValueChanged="Settings_Changed" IsSnapToTickEnabled="True"/>
                        </DockPanel>

                        <TextBlock Text="OUTLINE (NEW)" Foreground="#FF4500" FontSize="11" FontWeight="Bold" Margin="0,10,0,10" Opacity="0.7"/>
                        <TextBlock Text="Outline Thickness" Foreground="#AAA"/>
                        <DockPanel>
                            <TextBlock Text="{Binding ElementName=OutlineSlider, Path=Value, StringFormat={}{0:0}}" Foreground="#FF4500" Width="40" DockPanel.Dock="Right" TextAlignment="Right"/>
                            <Slider x:Name="OutlineSlider" Minimum="0" Maximum="5" Value="0" ValueChanged="Settings_Changed" IsSnapToTickEnabled="True"/>
                        </DockPanel>
                    </StackPanel>
                </ScrollViewer>

                <Grid x:Name="View_Profiles" Grid.Row="1" Visibility="Collapsed" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="SAVE NEW PROFILE" Foreground="#FF4500" FontSize="11" FontWeight="Bold" Margin="0,0,0,10" Opacity="0.7"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TxtProfileName" Text="My Cool Crosshair" Height="35" Background="#252525" Foreground="White" BorderThickness="0" Padding="10,8" VerticalContentAlignment="Center"/>
                            <Button Content="SAVE" Grid.Column="1" Background="#FF4500" Foreground="White" BorderThickness="0" Margin="10,0,0,0" FontWeight="Bold" Click="SaveProfile_Click">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <Border Grid.Row="1" Background="#1A1A1A" CornerRadius="10" Padding="10">
                        <ListBox x:Name="ListProfiles" Background="Transparent" BorderThickness="0" Foreground="White" FontSize="14" SelectionChanged="ListProfiles_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="10"/>
                                    <Setter Property="Margin" Value="0,2"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="bd" Property="Background" Value="#FF4500"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="bd" Property="Background" Value="#333"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Border>

                    <Button Grid.Row="2" Content="DELETE SELECTED" Background="#333" Foreground="#FF4500" Height="35" BorderThickness="0" Margin="0,15,0,0" FontWeight="Bold" Click="DeleteProfile_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

                <Grid x:Name="View_Settings" Grid.Row="1" Visibility="Collapsed" Margin="0,10,0,0">
                    <StackPanel>

                        <TextBlock Text="GENERAL" Foreground="#FF4500" FontSize="11" FontWeight="Bold" Margin="0,0,0,10" Opacity="0.7"/>
                        <Border Background="#1A1A1A" CornerRadius="10" Padding="15">
                            <StackPanel>
                                <CheckBox x:Name="ChkStartup" Content="Run on Windows Startup" Foreground="White" FontSize="14" Margin="0,0,0,5" Checked="ChkStartup_Changed" Unchecked="ChkStartup_Changed">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                    </CheckBox.LayoutTransform>
                                </CheckBox>
                                <TextBlock Text="Automatically start Crosshair X when you turn on your PC." Foreground="#666" FontSize="12" Margin="24,0,0,15"/>

                                <CheckBox x:Name="ChkMinimized" Content="Start Minimized" Foreground="White" FontSize="14" Margin="0,0,0,5" Checked="ChkMinimized_Changed" Unchecked="ChkMinimized_Changed">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                    </CheckBox.LayoutTransform>
                                </CheckBox>
                                <TextBlock Text="Launch the app quietly in the background (Menu hidden)." Foreground="#666" FontSize="12" Margin="24,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="ABOUT" Foreground="#FF4500" FontSize="11" FontWeight="Bold" Margin="0,20,0,10" Opacity="0.7"/>
                        <Border Background="#1A1A1A" CornerRadius="10" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="Crosshair My v1.0" Foreground="White" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="Developed by You" Foreground="#888" Margin="0,5,0,0"/>
                                </StackPanel>

                                <Button Grid.Column="1" Content="CHECK FOR UPDATES" Background="#252525" Foreground="White" Padding="15,0" Height="35" BorderThickness="0" Cursor="Hand" Click="Update_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>
                        </Border>

                        <TextBlock Text="SYSTEM" Foreground="#FF4500" FontSize="11" FontWeight="Bold" Margin="0,20,0,10" Opacity="0.7"/>
                        <Border Background="#1A1A1A" CornerRadius="10" Padding="15">
                            <StackPanel>
                                <DockPanel Margin="0,0,0,10">
                                    <TextBlock Text="Resolution" Foreground="#AAA"/>
                                    <TextBlock x:Name="TxtResolution" Text="1920x1080" Foreground="White" FontWeight="Bold" HorizontalAlignment="Right"/>
                                </DockPanel>
                                <Separator Background="#333" Margin="0,5,0,10"/>
                                <DockPanel>
                                    <TextBlock Text="Renderer" Foreground="#AAA"/>
                                    <TextBlock Text="WPF / DirectX" Foreground="White" FontWeight="Bold" HorizontalAlignment="Right"/>
                                </DockPanel>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Grid>

                <Border Grid.Row="2" Background="#1A1A1A" Padding="15,10" CornerRadius="10" Margin="0,20,0,0">
                    <Grid>
                        <TextBlock Text="Hotkeys: F2 Toggle | F3 Exit" Foreground="#666" VerticalAlignment="Center"/>
                        <Button Content="RESET ALL" Click="Reset_Click" HorizontalAlignment="Right" Background="Transparent" Foreground="#FF4500" BorderThickness="0" FontWeight="Bold" Cursor="Hand"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>